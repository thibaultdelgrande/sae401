{% extends 'base.html.twig' %}

{% block title %}Edit{% endblock %}



{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
{% endblock %}

{% block header %}{% endblock %}

{% block body %}
    <div class="container">
        {% if faq.id == null %}
            <h1>Create a question</h1>
        {% else %}
            <h1>Edit - {{ faq.question}}</h1>
        {% endif %}
        <div class="mb-3">
            You are connected as {{ app.user.username }}
            <a href="{{ path('app_backoffice_logout') }}">Logout</a>
        </div>


        {{ form_start(form) }}
        <div class="form-error invalid-feedback">
            {{ form_errors(form) }}
        </div>

        {% if app.request.get('lang') == "en" or app.request.get('lang') is null %}
        
            <div class="form-group">
                {{ form_label(form.question) }}
                {{ form_widget(form.question) }}
            </div>
            <div class="form-group">
                {{ form_label(form.answer) }}
                {{ form_widget(form.answer) }}
            </div>

        {% endif %}

        {% if app.request.get('lang') == "fr" %}
                    
            <div class="form-group">
                {{ form_label(form.questionFR) }}
                {{ form_widget(form.questionFR) }}
            </div>
            <div class="form-group">
                {{ form_label(form.answerFR) }}
                {{ form_widget(form.answerFR) }}
            </div>
        {% endif %}

        {% if app.request.get('lang') == "fr" %}
                    
            <div class="form-group">
                {{ form_label(form.questionDE) }}
                {{ form_widget(form.questionDE) }}
            </div>
            <div class="form-group">
                {{ form_label(form.answerDE) }}
                {{ form_widget(form.answerDE) }}
            </div>
        {% endif %}


        
        
        


        {{ form_end(form) }}


{% endblock %}

{% block footer %}{% endblock %}
