{% extends 'base.html.twig' %}

{% block title %}Admin pannel{% endblock %}



{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
{% endblock %}

{% block header %}{% endblock %}

{% block body %}

    <h1>Admin pannel</h1>
    <div class="container">
        You are connected as {{ app.user.username }}
        <a href="{{ path('app_backoffice_logout') }}">Logout</a>

        <h3>Escape games</h3>
            <div class="tab-pane fade active show" id="escapegames" role="tabpanel">
                <a href="#" class="btn btn-lg btn-primary">Create a new escape game</a>
                <ul class="list-group">
                    {% for escapeGame in escapeGames %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="#"><h3>{{ escapeGame.titre }}</h3></a>
                            <div>

                            <a href="{{ path('app_edition_escape_game', {'id': escapeGame.id})}}" class="btn btn-warning">Edit</a>
                            <a href="#" class="btn btn-danger">Delete</a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div> 
    </div>

    
    

{% endblock %}

{% block footer %}{% endblock %}
