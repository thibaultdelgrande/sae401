{% extends 'base.html.twig' %}

{% block title %}Admin pannel
{% endblock %}


{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
{% endblock %}

{% block header %}{% endblock %}

{% block body %}

	<h1>Admin pannel</h1>
	<div class="container">
		You are connected as
		{{ app.user.username }}
		<a href="{{ path('app_backoffice_logout') }}">Logout</a>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<h2 class="m-5">Escape games</h2>
		<div class="tab-pane fade active show" id="escapegames" role="tabpanel">
			<a href="{{ path('app_create_escape_game')}}" class="btn btn-lg btn-primary mb-4">Create a new escape game</a>
			<ul class="list-group">
				{% for escapeGame in escapeGames %}
					<li class="list-group-item d-flex justify-content-between align-items-center">
						<a href="#">
							<h3>{{ escapeGame.titre }}</h3>
						</a>
						<div>

							<a href="{{ path('app_edition_escape_game', {'id': escapeGame.id})}}" class="btn btn-warning">Edit</a>
							<a href="{{ path('app_delete_escape_game', {'id': escapeGame.id})}}" class="btn btn-danger">Delete</a>
						</div>
					</li>
				{% endfor %}
			</ul>
		</div>
		<h2 class="m-5">FAQ</h2>
        <div class="tab-pane fade active show" id="escapegames" role="tabpanel">
			<a href="{{ path('app_create_escape_game')}}" class="btn btn-lg btn-primary mb-4">Create a new escape game</a>
			<ul class="list-group">
				{% for faq in faqs %}
					<li class="list-group-item d-flex justify-content-between align-items-center">
						<a href="#">
							<h3>{{ faq.question }}</h3>
						</a>
                        <p>{{ faq.answer }}</p>
						<div>
							<a href="{{ path('app_edition_escape_game', {'id': faq.id})}}" class="btn btn-warning">Edit</a>
							<a href="{{ path('app_delete_escape_game', {'id': faq.id})}}" class="btn btn-danger">Delete</a>
						</div>
					</li>
				{% endfor %}
			</ul>
		</div>


	</div>
</div>{% endblock %}{% block footer %}{% endblock %}
