{% extends 'base.html.twig' %}

{% block title %}Kaiserstuhl Escape{% endblock %}

{% block body %}
    <main class="home">
    <!-- The video -->
    <video id="background-video" autoplay loop muted poster="https://assets.codepen.io/6093409/river.jpg">
        <source src="/img/bg_video.mp4" type="video/mp4">
    </video>
    <div class="text-video"><h1>{{ 'ready_to_escape'|trans }}</h1><h2>{{ 'live_an_amazing_story'|trans }}</h2></div>
    <div class="wave" style="top: -5vh"></div>
    <section>
        <div class="carousel-navigation">
            <button class="prev-button"><img src="/img/arrow-left.svg" alt=""></button>
            <button class="next-button"><img src="/img/arrow-right.svg" alt=""></button>
        </div>
        {% for escapeGame in escapeGames %}
            <div class="carousel">
                <div class="carousel-item active">
                    <div class="escape-carrousel">
                        <h3>{{ escapeGame.titre }}</h3>
                        <p>{{ escapeGame.description}}</p>
                        <div class="info-escape-carrousel">
                        <div class="spec-info-escape-carrousel">
                        <img src="/img/clock.svg" alt="">
                        <div>{{ escapeGame.duree | date('H:i') }}</div>
                        </div>
                        <div class="spec-info-escape-carrousel">
                        <img src="/img/star.svg" alt="">
                        <div>{{ random(3,5) }}/5</div>
                        </div>
                        <div class="spec-info-escape-carrousel">
                        <img src="/img/users.svg" alt="">
                        <div>{{ escapeGame.nombreJoueursMax }}</div>
                        </div>
                        </div>
                        <a href="{{ path('app_adventure', {'lang': app.request.get('lang')}) }}" class="button">{{ 'see_more'|trans }}</a>
                    </div>
                    <img class="img-carrousel" src="{{ escapeGame.image }}" alt="Image 1">
                </div>
            {% endfor %}
        </div>

    </section>
    <div class="wave"></div>
    <section>
        <h3 style="color: #ffae00">{{ 'users_feedback'|trans }}</h3>
        <div class="feedback-block">
            <div class="feedback">
                <p>{{ 'feedback_one'|trans }}</p>
                <hr>
                <img class="pp" src="/img/pp_dev.png" alt="">
                <div>Thibaut Pinot</div>
            </div>
            <div class="feedback">
                <p>{{ 'feedback_two'|trans }}</p>
                <hr>
                <img class="pp" src="/img/pp_dev.png" alt="">
                <div>Thibaut Pinot</div>
            </div>
            <div class="feedback">
                <p>{{ 'feedback_three'|trans }}</p>
                <hr>
                <img class="pp" src="/img/pp_dev.png" alt="">
                <div>Thibaut Pinot</div>
            </div>
        </div>
    </section>
    <div class="wave"></div>
    <section>
        <h3 style="color: #ffae00">{{ 'gift_card'|trans }}</h3>
        <div class="global-offer"><p>{{ 'because_experience_are_better'|trans }}</p>
            <div class="offers-img"><img class="transparent" style="transform: translate(10vw)" src="/img/offer-card.JPG" alt=""><img class="front-img" src="/img/offer-card.JPG" alt=""><img class="transparent" style="transform: translate(-10vw)" src="/img/offer-card.JPG" alt=""></div>
            <a href="{{ path('app_offers', {'lang': app.request.get('lang')}) }}" class="button">{{ 'see_more'|trans }}</a>
        </div>
    </section>
    <div class="wave"></div>
    <section>
        <h3 style="color: #ffae00">{{ 'our_partners'|trans }}</h3>
        <div class="parteners-block">
            <p>{{ 'these_companies_celebrated'|trans }}</p>
            <div class="partners-display"><img src="/img/Logitech_logo.png" alt=""><img src="/img/bmw_logo.png" alt=""><img src="/img/Allianz_logo.png" alt=""><img src="/img/Siemens_logo.png" alt=""><img src="/img/DHL_Logo.png" alt=""><img src="/img/Alstom_logo.png" alt=""><img src="/img/Dm_Logo.png" alt=""><img src="/img/Lufthansa_Logo.png" alt=""></div>
        </div>
    </section>
    <div class="wave" style="top: 5vh"></div>
    </main>
    <script src="/js/carrousel.js"></script>

{% endblock %}
